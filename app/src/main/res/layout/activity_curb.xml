<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Curb">

    <EditText
        android:id="@+id/editLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:ems="4"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/LengthTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Length(Ft):"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/editLength"
        app:layout_constraintEnd_toStartOf="@+id/editLength"
        app:layout_constraintTop_toTopOf="@+id/editLength" />

    <EditText
        android:id="@+id/editCurbDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/white"
        android:ems="4"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editLength"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editLength"
        app:layout_constraintTop_toBottomOf="@+id/editLength" />
    <TextView
        android:id="@+id/CurbDepthTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:text="Curb Depth(In):"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/editCurbDepth"
        app:layout_constraintEnd_toStartOf="@+id/editCurbDepth"
        app:layout_constraintTop_toTopOf="@+id/editCurbDepth"
        app:layout_constraintVertical_bias="0.538" />

    <EditText
        android:id="@+id/editCurbHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/white"
        android:ems="4"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editWidth"
        app:layout_constraintStart_toStartOf="@+id/editWidth"
        app:layout_constraintTop_toBottomOf="@+id/editWidth" />

    <TextView
        android:id="@+id/CurbHeightTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:text="Curb Height(In):"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editCurbHeight"
        app:layout_constraintEnd_toStartOf="@+id/editCurbHeight"
        app:layout_constraintTop_toTopOf="@+id/editCurbHeight"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/editWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:ems="4"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toEndOf="@+id/editLength"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WidthTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Width(In):"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/editWidth"
        app:layout_constraintEnd_toStartOf="@+id/editWidth"
        app:layout_constraintTop_toTopOf="@+id/editWidth" />

    <EditText
        android:id="@+id/editThickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:backgroundTint="@color/white"
        android:ems="4"
        android:inputType="number"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editCurbHeight"
        app:layout_constraintHorizontal_bias="0.288"
        app:layout_constraintStart_toStartOf="@+id/editCurbDepth"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ThicknessTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thickness(In):"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editThickness"
        app:layout_constraintEnd_toStartOf="@+id/editThickness"
        app:layout_constraintTop_toTopOf="@+id/editThickness" />

    <Button
        android:id="@+id/calcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="@+id/editThickness"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/editThickness"
        app:layout_constraintTop_toBottomOf="@+id/editThickness" />

    <TextView
        android:id="@+id/txtYards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Yards:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/calcButton"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcButton" />

    <TextView
        android:id="@+id/txtBags80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="80Lb:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtYards"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtYards"
        app:layout_constraintTop_toBottomOf="@+id/txtYards" />

    <TextView
        android:id="@+id/txtBags60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="60Lb:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtBags80"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtBags80"
        app:layout_constraintTop_toBottomOf="@+id/txtBags80" />

    <TextView
        android:id="@+id/txtBags40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="40Lb:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtBags60"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtBags60"
        app:layout_constraintTop_toBottomOf="@+id/txtBags60" />
</android.support.constraint.ConstraintLayout>