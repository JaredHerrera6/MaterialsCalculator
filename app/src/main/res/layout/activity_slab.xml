<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Slab">

    <EditText
        android:id="@+id/editLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="28dp"
        android:ems="4"
        android:backgroundTint="@color/white"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LengthTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Length(Ft):"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editLength"
        app:layout_constraintEnd_toStartOf="@+id/editLength"
        app:layout_constraintTop_toTopOf="@+id/editLength"
        app:layout_constraintVertical_bias="0.571" />

    <EditText
        android:id="@+id/editWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="4"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editThickness"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editThickness"
        app:layout_constraintTop_toBottomOf="@+id/editThickness" />

    <TextView
        android:id="@+id/WidthTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Width(Ft):"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editWidth"
        app:layout_constraintEnd_toStartOf="@+id/editWidth"
        app:layout_constraintTop_toTopOf="@+id/editWidth"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="4"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editWidth"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editWidth"
        app:layout_constraintTop_toBottomOf="@+id/editWidth" />

    <TextView
        android:id="@+id/SqFTTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SqFt$:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editPrice"
        app:layout_constraintEnd_toStartOf="@+id/editPrice"
        app:layout_constraintTop_toTopOf="@+id/editPrice" />

    <EditText
        android:id="@+id/editThickness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="4"
        android:backgroundTint="@color/white"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/editLength"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editLength"
        app:layout_constraintTop_toBottomOf="@+id/editLength" />

    <TextView
        android:id="@+id/ThickTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thickness(In):"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/editThickness"
        app:layout_constraintEnd_toStartOf="@+id/editThickness"
        app:layout_constraintTop_toTopOf="@+id/editThickness"
        app:layout_constraintVertical_bias="0.482" />

    <Button
        android:id="@+id/calcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="@+id/editPrice"
        app:layout_constraintStart_toStartOf="@+id/editPrice"
        app:layout_constraintTop_toBottomOf="@+id/editPrice" />

    <TextView
        android:id="@+id/txtYards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="124dp"
        android:text="Yards:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/calcButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calcButton" />

    <TextView
        android:id="@+id/txtBags80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="80Lb:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtYards"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtYards"
        app:layout_constraintTop_toBottomOf="@+id/txtYards" />

    <TextView
        android:id="@+id/txtBags60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="60Lb:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtBags80"
        app:layout_constraintStart_toStartOf="@+id/txtBags80"
        app:layout_constraintTop_toBottomOf="@+id/txtBags80" />

    <TextView
        android:id="@+id/txtBags40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="40Lb:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtBags60"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtBags60"
        app:layout_constraintTop_toBottomOf="@+id/txtBags60" />

    <TextView
        android:id="@+id/txtEstimate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Quote:"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtBags40"
        app:layout_constraintStart_toStartOf="@+id/txtBags40"
        app:layout_constraintTop_toBottomOf="@+id/txtBags40" />
</android.support.constraint.ConstraintLayout>